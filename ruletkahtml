 js


 const openCaseBtn = document.getElementById('openCaseBtn');
const caseBox = document.getElementById('caseBox');
const caseImage = document.getElementById('caseImage');
const result = document.getElementById('result');

// Список скінів
const skins = [
  { name: "AK-47 | Redline", img: "skins/ak-redline.png", link: "downloads/ak-redline.zip" },
  { name: "M4A4 | Howl", img: "skins/m4a4-howl.png", link: "downloads/m4a4-howl.zip" },
  { name: "AWP | Dragon Lore", img: "skins/awp-dragonlore.png", link: "downloads/awp-dragonlore.zip" },
  { name: "Glock-18 | Fade", img: "skins/glock-fade.png", link: "downloads/glock-fade.zip" },
  { name: "USP-S | Orion", img: "skins/usp-orion.png", link: "downloads/usp-orion.zip" }
];

openCaseBtn.addEventListener('click', () => {
  // Анімація підняття кейса
  caseImage.style.transform = "translateY(-300px)";
  caseImage.style.opacity = "0";

  // Показуємо виграш через 1.5 секунди
  setTimeout(() => {
    const randomSkin = skins[Math.floor(Math.random() * skins.length)];

    result.innerHTML = `
      <div class="skin-result">
        <img src="${randomSkin.img}" alt="${randomSkin.name}">
        <p>${randomSkin.name}</p>
        <a href="${randomSkin.link}" class="download-btn" download>Скачати</a>
      </div>
    `;

    // Повертаємо кейс для наступної анімації
    caseImage.style.transform = "translateY(0)";
    caseImage.style.opacity = "1";
  }, 1500);
});
